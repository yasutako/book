<html>
    <head>
        <title></title>
        <link rel="stylesheet" href="http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.css" />
        <script src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
        <script src="http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.js"></script>
        <script src="jquery.cookie.js"></script>
    </head>
    <body style="background-color:#0ff">
        <div data-role="header"></div>
        <div data-role="content">
            <form method="post" action="login">
                <table>
                    <tr>
                        <td>mail</td>
                        <td><input type="text" name="mail" id="mail"/></td>
                    </tr>
                    <tr>
                        <td>password</td>
                        <td><input type="password" name="password"/></td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align:center"><input type="submit" value="ログイン" onclick="submit()"/></td>
                    </tr>
                    <tr>
                        <td><a href="register1">ユーザー登録</a></td>
                    </tr>
                </table>
            </form>
        </div>
    </body>
    <script type="text/javascript">
        function load() {
            document.getElementById('mail').value = $.cookie('mail');
        }
        function submit() {
            $.cookie('mail', document.getElementById('mail').value);
        }
        load();
    </script>
</html>